<%= render "partial/navbar" %>

<div class="container-fluid">
  <div class="row o-3column">
    <div class="col-md-3">
      <div class="box">
        <h2>サイドバー１</h2>         
      </div> 
    </div>

    <div class="col-md-6 col-md-offset-1">
      
<div class="panel panel-default">
	<div class="panel-heading">
	口座を変更する
	</div>

	<div class="panel-body">			
	<!-- ここからフォーム -->
	<%= form_for :post, url: payouts_account_update_path, html: {method: "post"} do |f| %>
		<div class="row">
			<div class="col-md-12 select">
				<div class="form-group">
	            <label>銀行名</label>
	            <%= f.text_field :bank_name, placeholder: "（例）みずほ銀行", class: "form-control", required: "true" %>
	        	</div>
			</div>
		</div>
		<br>

		<div class="row">
			<div class="col-md-12 select">
				<div class="form-group">
	            <label>支店名</label>
	            <%= f.text_field :branch_name, placeholder: "（例）青森支店", class: "form-control", required: "true" %>
	        	</div>
			</div>
		</div>
		<br>

		<div class="row">
			<div class="col-md-12 select">
				<div class="form-group">
					<label>口座の種類</label>
					<%= f.select :account_types, [["普通","普通"], ["当座","当座"], ["貯蓄","貯蓄"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
				</div>
			</div>
		</div>
		<br>

		<div class="row">
			<div class="col-md-12 select">
				<div class="form-group">
	            <label>口座番号</label>
	            <%= f.text_field :account_number, placeholder: "（例）0000000", class: "form-control", required: "true" %>
	        	</div>
			</div>
		</div>
		<br>

		<div class="row">
			<div class="col-md-12 select">
				<div class="form-group">
	            <label>口座名義</label>
	            <%= f.text_field :account_holder, placeholder: "（例）ナントカタロウ", class: "form-control", required: "true" %>
	        	</div>
			</div>
		</div>
		<br>

		<div class="actions">
			<%= f.submit "登録", class: "btn btn-danger" %>
		</div>
	<% end %>
	</div>

    </div>
    </div>

    <div class="col-md-2">
      <div class="box">
        <h2>サイドバー２</h2>
      </div>
    </div>
  </div>
</div>

