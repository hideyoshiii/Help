<% @listings.each do |listing| %>
<div class="panel panel-default">
<div class="panel-body">
<%= link_to listing do %>
<p>
<div class="pull-left link-title">
<%= image_tag listing.user.image,class:"img-circle profile-1" %>
&nbsp;&nbsp;
<%= listing.title %>
</div>
</p>
<% end %> 
<div class="clearfix">
</div>
<hr>
<div class="pull-right">
<i class="fa fa-jpy" aria-hidden="true"></i>
<%= listing.budget %>
&nbsp;
<i class="fa fa-calendar-check-o" aria-hidden="true"></i>
<%= listing.deadline %>
&nbsp;
<i class="fa fa-map-marker" aria-hidden="true"></i>
<%= listing.area %>
&nbsp;
<i class="fa fa-hand-paper-o" aria-hidden="true"></i>
<% proposals_count = Proposal.where(listing_id: listing.id).count %>
<%= proposals_count %>
&nbsp;
<i class="fa fa-heart-o" aria-hidden="true"></i>
<% likes_count = Like.where(listing_id: listing.id).count %>
<%= likes_count %>
</div>
<% if listing.solution == true %>
                    <div class="pull-left red">
                        <i class="fa fa-check" aria-hidden="true"></i>解決済み
                    </div>
                    <% else %>
<p class="pull-left"><%= link_to "編集", edit_listing_path(listing), class: "btn btn-info pull-right" %></p>
<% end %>
</div>
</div>
<% end %>




