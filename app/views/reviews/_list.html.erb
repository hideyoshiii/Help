<% if @reviews.count == 0 %>
  <div class="text-center">
    <h4>レビューはまだありません</h4>
  </div>
<% else %>
  <% @reviews.order("id desc").each do |review| %>
    <hr>
    <div class="row">
      <div class="col-md-2 text-center">
        <%= image_tag review.user.image, class:"img-circle profile-1" %>

        
      </div>
      <div class="col-md-10">
        &nbsp;&nbsp;
          <%= review.description %>
          <br>
        <div class="pull-right review-date">
          <%= review.created_at.strftime("%Y年%m月%d日") %>
        </div>
        
        
      </div>
    </div>
  <%end%>
<% end %>