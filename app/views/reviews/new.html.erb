<%= render 'partial/navbar' %>

<div class="container-fluid">
  <div class="row o-3column">
    <div class="col-md-3 col-sm-3 hidden-xs">
      
    </div>

    <div class="col-md-6 col-md-offset-1 col-sm-6 col-sm-offset-1 col-xm-12">
      <div class="panel panel-default">
        <div class="panel-body">
      	
        <%= form_for([@approval,@approval.reviews.new]) do |f| %>

  <div id="rate_stars"></div>
  <br>

  <div class="form-group">
    <%= f.text_area :description,rows: 4, placeholder: "Helpしてくれた相手への感謝の気持ちを書きましょう！" ,class: "form-control" %>     
  </div>


  <%= f.hidden_field :approval_id, value: @approval.id %>
  <%= f.hidden_field :reviewed_user_id, value: @approval.proposal.user.id %>

  <%= f.hidden_field :balance, value: @approval.proposal.proposal_price %>
  <br>
  
  <div class="actions">
    <%= f.submit "レビューする", class: "btn btn-danger"%>       
  </div>

<% end %> 

      </div>
    </div>
    </div>

    <div class="col-md-2 col-sm-2 col-xm-12">
      
    </div>
  </div>
</div>



<script type="text/javascript">
  $("#rate_stars").raty({
      path: '/assets',
      scoreName: 'review[rate]',
      score: 1
  });
</script>


