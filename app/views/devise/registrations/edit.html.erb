<%= render 'partial/navbar' %>

      


 <div class="container-fluid">
      <div class="row o-3column">
        <div class="col-md-3 col-sm-3 hidden-xs">
        
    </div>
        <div class="col-md-6 col-md-offset-1 col-sm-6 col-sm-offset-1 col-xm-12">
        <div class="panel panel-default">
        <div class="panel-heading">プロフィールを編集</div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'partial/deviseErrorMsg' %>
            名前

            <div class="form-group">
              <%= f.text_field :name, autofocus: true, :placeholder => "名前", :class => 'form-control' %>
            </div>
            メールアドレス

            <div class="form-group">
              <%= f.email_field :email, :placeholder => "Email", :class => 'form-control' %>
            </div>
            自己紹介

            <div class="form-group">
              <%= f.text_area :description, rows: 5, cols: 25,  :placeholder => "自己紹介文", :class => 'form-control' %>
            </div>

            

            <div class="actions">
              <%= f.submit "プロフィールを更新", :class => "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    
    </div>
        <div class="col-md-2 col-sm-2 col-xm-12">
        
    </div>
      </div>
    </div>