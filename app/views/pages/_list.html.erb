


<% if @arrlistings  %>
<% @arrlistings.each do |listing| %>
<div class="panel panel-default">
<div class="panel-body">
<div class="row">
<div class="col-md-2">
<%= link_to listing do %>
<div class="text-center">
<%= image_tag listing.user.image,class:"img-circle profile-1" %>
</div>
</div>
<div class="col-md-10">
<div class="pull-left link-title">
<%= listing.title %>
</div>
</div>
</div>
<% end %> 
<div class="clearfix">
</div>
<hr>
<% if listing.solution == true %>
<div class="pull-left red">
	<i class="fa fa-check" aria-hidden="true"></i>解決済み
</div>
<% end %>
<div class="pull-right">
<i class="fa fa-jpy" aria-hidden="true"></i>
<%= listing.budget %>
&nbsp;
<i class="fa fa-calendar-check-o" aria-hidden="true"></i>
<%= listing.deadline %>
&nbsp;
<i class="fa fa-map-marker" aria-hidden="true"></i>
<%= listing.area %>
&nbsp;
<i class="fa fa-hand-paper-o" aria-hidden="true"></i>
<% proposals_count = Proposal.where(listing_id: listing.id).count %>
<%= proposals_count %>
&nbsp;
<i class="fa fa-heart-o" aria-hidden="true"></i>
<% likes_count = Like.where(listing_id: listing.id).count %>
<%= likes_count %>
</div>
</div>
</div>
<% end %>
<% end %>


