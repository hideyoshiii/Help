<!-- patial just render single message -->
<% if message.user == current_user %>
<div class="panel panel-default"> 
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2 text-center row-space-1">
                <%= image_tag message.user.image, class: "img-circle profile-1" %>
                <br>
                <%= message.user.name %> 
                <br>
                <div class="review-date">
                <%= message.message_time %>
                </div>
            </div>

            <div class="col-md-10 text-center">
                <br>
                <%= message.body %>
            </div>   
        </div>
        
    </div>
    </div>


<% else %>
<div class="panel panel-default"> 
<div class="panel-body">
        <div class="row">

            <div class="col-md-10 text-center">
                <br>
                <%= message.body %>
            </div>

            
            <div class="col-md-2 text-center row-space-1">
                <%= image_tag message.user.image, class: "img-circle profile-1" %>
                <br>
                <%= message.user.name %> 
                <br>
                <div class="review-date">
                <%= message.message_time %>
                </div>
            </div>
        </div>
        
    </div>
    </div>

    <% end %>